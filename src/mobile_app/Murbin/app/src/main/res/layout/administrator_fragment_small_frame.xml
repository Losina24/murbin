<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/administrator_fragment_small_frame_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_large_frame">

    <TextView
        android:id="@+id/administrator_fragment_small_frame_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserratsemibold"
        android:text="@string/administrator_fragment_small_frame_tv_noise"
        android:textColor="@color/blanco"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/administrator_fragment_small_frame_tv_number"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/montserratlight"
        android:foregroundGravity="center"
        android:gravity="center|center_vertical"
        android:text="@string/administrator_fragment_large_frame_tv_number"
        android:textAlignment="gravity"
        android:textColor="@color/blanco"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>