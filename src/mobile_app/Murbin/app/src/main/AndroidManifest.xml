<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.murbin">

    <application
        android:name=".CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_murbin"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_murbin_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.Murbin">

        <activity android:name=".presentation.LoginMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.LoginWithEmailActivity"
            android:parentActivityName=".presentation.LoginMenuActivity" />

        <activity android:name=".presentation.MainActivity" />

        <activity
            android:name=".presentation.UserActivity"
            android:parentActivityName=".presentation.MainActivity" />

    </application>

</manifest>