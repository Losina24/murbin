<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.murbin">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_murbin"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_murbin_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.Murbin">

        <!-- Zone User (No need user identification) -->
        <activity
            android:name=".presentation.zone.user.UserMainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.auth.AuthEmailActivity"
            android:parentActivityName=".presentation.zone.user.UserMainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".presentation.profiles.ProfileActivity"
            android:screenOrientation="portrait" />

        <!-- Zone Scientific (Needs identity and role verification of the user) -->
        <activity
            android:name=".presentation.zone.scientific.ScientificMainActivity"
            android:screenOrientation="portrait" />

        <!-- Zone Technical (Needs identity and role verification of the user) -->
        <activity
            android:name=".presentation.zone.technical.TechnicalMainActivity"
            android:screenOrientation="portrait" />

        <!-- Zone Administrator (Needs identity and role verification of the user) -->
        <activity
            android:name=".presentation.zone.administrator.AdministratorMainActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

    </application>

</manifest>